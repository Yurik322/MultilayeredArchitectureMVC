@model IEnumerable<PL.Models.CommentViewModel>

@{
    ViewBag.Title = "Guest";
}

<h2>Guest</h2>
<div class="comments">
    @foreach (var comment in Model)
    {
        <div class="comment-text">
            <h5>Author: @comment.AuthorName<span class="comment-text">@comment.Date</span></h5>
            <p>@comment.Text</p>
        </div>
    }
    <div class="comment-form">
        <form method="post">
            @Html.ValidationSummary(true)
            <p>
                <label>Author:</label><br />
                <input class="input" id="author" type="text" name="author" />
                @Html.ValidationMessage("AuthorName")
            </p>
            <p>
                <label>Comment:</label><br />
                <textarea class="input" id="comment" type="text" name="text"></textarea>
                @Html.ValidationMessage("Text")
            </p>
            <p>
                <input type="submit" value="Send" />
            </p>
        </form>
    </div>
</div>